<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="100dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/ivListLocation"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        tools:src="@drawable/mountain"
        app:civ_border="false"
        app:civ_shadow="true"
        app:civ_shadow_radius="10dp"
        app:civ_shadow_color="@color/colorPrimary"
        android:layout_weight="0"/>

    <LinearLayout
        android:id="@+id/llWithInLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_weight="1"
        >

    <TextView
        android:id="@+id/tvTitleList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginEnd="20sp"
        android:textStyle=""
        android:layout_marginBottom="10sp"
        tools:text="THIS IS OUR TITLE" />

        <TextView
            android:id="@+id/tvDescriptionList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="this is our description" />

    </LinearLayout>


</LinearLayout>